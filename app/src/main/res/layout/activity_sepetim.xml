<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.aygazprojesi.Sepetim"
    android:background="@drawable/arkaplan">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/sepet"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#298A08"
        android:text="SEPETİMDEKİLER"/>
    <ListView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_weight="0.85"
        android:layout_height="0dp"
        android:id="@+id/listView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:textStyle="bold"
        android:textColor="#F7F2F5"
        android:id="@+id/btnSepetiBosalt"
        android:layout_marginBottom="7dp"
        android:background="@drawable/mavibuton"
        android:text="Sepeti Boşalt"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#585858"
        android:layout_weight="0.17"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="7dp"
                android:textColor="#fff"
                android:layout_marginLeft="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toplam : "/>
            <TextView
                android:layout_marginTop="3dp"
                android:textSize="18sp"
                android:id="@+id/tvToplamFiyat"
                android:textColor="#fff"
                android:layout_marginLeft="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fiyat" />
        </LinearLayout>


        <Button
            android:layout_gravity="center_vertical"
            android:background="@drawable/mavibuton"
            android:layout_marginRight="12dp"
            android:textStyle="bold"
            android:id="@+id/btnSepetiOnayla"
            android:textColor="#F7F2F5"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:text="Sepeti Onayla"/>
    </LinearLayout>
</LinearLayout>
