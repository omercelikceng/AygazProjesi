<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.aygazprojesi.EfektIslemleri$AnaActivity$PlaceholderFragment"
    android:background="@drawable/arkaplan">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BİLGİLERİM"
        android:layout_marginBottom="22dp"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="E- Mail : "
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FA5858"
            android:textSize="20sp"
            android:id="@+id/tvEMail"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="Ad -Soyad : "
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etAdSoyad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="Adres : "
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etAdres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="Telefon : "
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="14dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Güncelle"
            android:id="@+id/btnGuncelle"
            android:background="@drawable/mavibuton"
            android:textColor="@color/buttonYaziRengim"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Çıkış Yap"
            android:id="@+id/btnCikisYap"
            android:background="@drawable/mavibuton"
            android:textColor="@color/buttonYaziRengim"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
