<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/arkaplan"
    tools:context="app.aygazprojesi.Yetkili">
    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:id="@+id/btnOturumKapat"
        android:text="Oturumu Sonlandır"
        android:background="@drawable/mavibuton"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#0080FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gelen Siparişler"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#0431B4"
            android:layout_height="wrap_content"
            android:text="@string/siparis_sahibi"
            android:layout_marginBottom="15sp"/>
        <TextView
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:textColor="#0431B4"
            android:layout_marginBottom="15sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/siparis_tarihi"/>

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1.0sp"
        android:id="@+id/listView"
        android:divider="#6E6E6E"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"></ListView>

</LinearLayout>
